{
  "extends": ["tslint:all", "tslint-config-prettier", "tslint-react"],
  "defaultSeverity": "error",
  "rules": {
    "no-console": false,
    "variable-name": [true, "ban-keywords", "allow-pascal-case"],
    "array-type": false,
    "no-parameter-properties": false,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "trailing-comma": false,
    "completed-docs": false,
    "prefer-for-of": false,
    "strict-type-predicates": false,
    "only-arrow-functions": [true, "allow-named-functions"],
    "no-inferrable-types": [false, "ignore-params", "ignore-properties"],
    "max-line-length": [
      true,
      {
        "limit": 100,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "align": [false],
    "no-unnecessary-type-assertion": false,
    "prefer-switch": false,
    "typedef": [true, "call-signature", "parameter"],
    "arrow-parens": false,
    "no-unsafe-any": false,
    "no-any": false,
    "newline-per-chained-call": false,
    "member-ordering": false,
    "prefer-function-over-method": false,
    "no-unnecessary-class": false,
    "no-empty-interface": false,
    "await-promise": [true, "Bluebird", "PromiseLike"],
    "no-implicit-dependencies": [true, "dev"],
    "strict-boolean-expressions": false
  }
}
